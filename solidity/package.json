{
  "name": "ribus-sdk",
  "version": "0.1.63",
  "license": "MIT",
  "main": "dist/index.js",
  "unpkg": "dist/umd.js",
  "types": "types/src/lib/index.d.ts",
  "targets": {
    "umd": {
      "outputFormat": "global",
      "context": "browser",
      "source": "src/lib/umd.js",
      "includeNodeModules": {
        "@metamask/eth-sig-util": false
      }
    },
    "main": {
      "source": "src/lib/index.ts",
      "isLibrary": true,
      "includeNodeModules": false
    }
  },
  "files": [
    "dist/**",
    "types/**",
    "artifacts/**",
    "deploy.json"
  ],
  "scripts": {
    "dev": "run-p -l dev:*",
    "dev:node": "hardhat node",
    "dev:deploy": "wait-port 8545 && npm run local:deploy",
    "dev:build": "npm run watch",
    "console": "hardhat console --network",
    "watch": "parcel watch",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "parcel build",
    "build:types": "tsc --project tsconfig.lib.json && cp ./typechain/**.d.ts ./types/typechain",
    "local:deploy": "hardhat run src/scripts/deploy.ts --network localhost",
    "local:upgrade": "hardhat run src/scripts/upgrade.ts --network localhost",
    "local:test": "hardhat test --network localhost",
    "staging:deploy": "hardhat run src/scripts/deploy.ts --network mumbai",
    "staging:upgrade": "hardhat run src/scripts/upgrade.ts --network mumbai",
    "staging:upload": "hardhat run src/scripts/upload.ts --network mumbai",
    "deploy": "hardhat run src/scripts/deploy.ts --network polygon",
    "upgrade": "hardhat run src/scripts/upgrade.ts --network polygon",
    "upload": "hardhat run src/scripts/upload.ts --network polygon"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "assert": "^2.0.0",
    "builtin-modules": "^3.2.0",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eip-712": "^1.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "hardhat": "^2.9.3",
    "hardhat-gas-reporter": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.5.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "rollup": "^2.72.0",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "stream-browserify": "^3.0.0",
    "ts-node": "^10.7.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2",
    "wait-port": "^0.3.0"
  },
  "dependencies": {
    "@metamask/eth-sig-util": "^4.0.1",
    "@web3-onboard/core": "^2.2.8",
    "@web3-onboard/injected-wallets": "^2.0.6",
    "@web3-onboard/walletconnect": "^2.0.1",
    "axios": "^0.27.2",
    "defender-autotask-client": "^1.21.0",
    "defender-autotask-utils": "^1.21.0",
    "defender-relay-client": "^1.21.0",
    "eth-sig-util": "^3.0.1",
    "ethers": "^5.7.1",
    "jsonwebtoken": "^8.5.1"
  }
}
